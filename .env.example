# Environment Variables for System Monitor
# Copy this file to .env and customize values

# Docker Configuration
COMPOSE_PROJECT_NAME=system-monitor

# Monitoring Configuration
MONITOR_INTERVAL=60
RETENTION_DAYS=7

# Reporter Configuration
REPORTER_PORT=8080

# InfluxDB Configuration (optional)
INFLUXDB_INIT_USERNAME=admin
INFLUXDB_INIT_PASSWORD=change_me_in_production
INFLUXDB_INIT_ORG=system-monitor
INFLUXDB_INIT_BUCKET=metrics
INFLUXDB_INIT_ADMIN_TOKEN=change_me_in_production

# Email Alert Configuration (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL_TO=admin@example.com

# Debug Mode
DEBUG=0
